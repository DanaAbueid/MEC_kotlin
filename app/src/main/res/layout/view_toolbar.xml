<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/custom_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_select_language"
        style="@style/backlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@drawable/rounded_filled_bg"
        android:text="EN | AR"
        android:textColor="@color/editTextBackground"
        app:layout_constraintBottom_toBottomOf="@id/view_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_toolbar"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/logoutBtn"
        style="@style/genericSpinner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/hugeicons__logout_05"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@id/view_toolbar"
        app:layout_constraintEnd_toStartOf="@id/iv_title"
        app:layout_constraintTop_toTopOf="@id/view_toolbar"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/app_name"
        android:foregroundTint="#FFFFFF"
        android:foregroundTintMode="src_over"
        android:scaleType="fitXY"
        android:src="@drawable/mec_icon"
        android:tintMode="src_in"
        app:layout_constraintBottom_toBottomOf="@id/view_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_toolbar"
        />
</androidx.constraintlayout.widget.ConstraintLayout>